                public class AutoMapperProfile : Profile
                {
                public AutoMapperProfile()
                {
                CreateMap<UserViewModel, UserModel>()
                    .ForMember(userModel => userModel.Authorities,
                    opt => opt.MapFrom(userViewModel => userViewModel.Roles))
                    .ReverseMap()
                    .ForPath(userViewModel => userViewModel.Roles,
                    opt => opt.MapFrom(userModel => userModel.Authorities));

                    CreateMap<ManagedUserViewModel, UserSaveModel>().ReverseMap();
                        CreateMap<LoginViewModel, LoginModel>().ReverseMap();

